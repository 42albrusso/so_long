{
      "tasks": [
            {
                  "type": "cppbuild",
                  "label": "C/C++: gcc build active file",
                  "command": "/usr/bin/gcc",
                  "args": [
                        "-fdiagnostics-color=always",
                        "-g",
                        "${workspaceFolder}/srcs/*.c",
                        "${workspaceFolder}/libft/libft.a",
                        "${workspaceFolder}/minilibx_linux/libmlx.a",
                        "-lX11",
                        "-lXext",
                        "-lm",
                        "-o",
                        "so_long"
                  ],
                  "options": {
                        "cwd": "${fileDirname}"
                  },
                  "problemMatcher": [
                        "$gcc"
                  ],
                  "group": {
                        "kind": "build",
                        "isDefault": true
                  },
                  "detail": "Task generated by Debugger."
            }
      ],
      "version": "2.0.0"
}